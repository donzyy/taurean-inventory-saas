{
  "watch": ["src"],
  "ext": "ts,js",
  "ignore": ["node_modules", "dist", ".git"],
  "exec": "npm run seed && ts-node ./src/index.ts",
  "delay": "1500",
  "verbose": true,
  "colours": true,
  "env": {
    "NODE_ENV": "development"
  },
  "legacy-watch": true,
  "legacyWatch": true,
  "restartable": true
}
